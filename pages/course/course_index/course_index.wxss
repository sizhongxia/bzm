.title-box{ width: 750rpx; height: 138rpx; position: relative; 
 background: url(https://bzm.oss-cn-beijing.aliyuncs.com/baizhuanmao/course-9.png)  706rpx 43rpx no-repeat #fff;
 background-size:14rpx 27rpx; 
}

.title-box .name{ font-size: 34rpx; color: #333333;  line-height: 1; position: absolute; left: 30rpx; top: 40rpx;}
.title-box .desc{ color:#999999; font-size:26rpx;line-height: 1; position: absolute; left: 30rpx; top: 88rpx; width: 500rpx; 
white-space:nowrap;
 overflow:hidden;
 text-overflow:ellipsis;
}
