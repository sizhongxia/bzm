page{ background: #f4f4f4;}

.top_thumb{ display: block; }


.title-box{ width: 750rpx; height: 138rpx; position: relative; 
 background:#fff;
}

.title-box .name{ font-size: 34rpx; color: #333333;  line-height: 1; position: absolute; left: 30rpx; top: 40rpx;}
.title-box .desc{ color:#999999; font-size:26rpx;line-height: 1; position: absolute; left: 30rpx; top: 88rpx; width: 500rpx; 
white-space:nowrap;
 overflow:hidden;
 text-overflow:ellipsis;
}

.userinfo{ background: #fff; padding: 0 30rpx;}
.infobox {position: relative; width: 690rpx; height: 80rpx; padding-top: 30rpx; border-top: 1rpx solid #dddddd; }
.infobox .head-photo{ display: block; width: 80rpx; height: 80rpx; border-radius: 100%; position: absolute; top: 30rpx; left: 0;}
.infobox .name{ line-height: 1; font-size: 30rpx; color: #333333; position: absolute; top: 55rpx; left: 100rpx;}

.infobox .phone{  display: block; width: 120rpx; height: 50rpx; border: 1rpx solid #e95410; border-radius: 30rpx; position: absolute; right: 0rpx; top: 45rpx; font-size: 26rpx; color: #e95410; line-height: 50rpx; text-indent: 50rpx;
background: url('https://bzm.oss-cn-beijing.aliyuncs.com/baizhuanmao/5s-3.png') 14rpx center no-repeat;
background-size:28rpx; 
}



.ctitle-box{ height: 100rpx; padding-left: 50rpx;
  background: url(https://bzm.oss-cn-beijing.aliyuncs.com/baizhuanmao/course-detail-4.png) 30rpx center no-repeat #fff;
  background-size:10rpx 40rpx; 
}
.ctitle-box .name{ float: left; line-height: 100rpx; font-size: 34rpx; color: #333333;}
.ctitle-box .desc{ padding-left: 10rpx; float: left; line-height: 100rpx; font-size: 26rpx; color: #999999;}

.course-box{ padding: 0 22rpx;  padding-bottom: 30rpx; background: #fff;}
.course-box navigator{ display: block; padding: 0 11rpx; width: 336rpx; height: 260rpx; float: left;}
.course-box image{ display: block; width: 336rpx; height: 200rpx; border-radius: 10rpx;}
.course-box .title{ height: 60rpx; line-height: 60rpx; font-size: 26rpx; color: #333333;
 white-space:nowrap;
 overflow:hidden;
 text-overflow:ellipsis;
 width: 336rpx;
}

.article-box{ background: #fff;
  padding: 30rpx;
}

.article-box .text{ font-size: 30rpx; color: #333333; line-height: 1.5; }

.article-box .thumb{ width: 100%;}

.map{  display: block; width: 120rpx; height: 50rpx; border: 1rpx solid #e95410; border-radius: 30rpx;  font-size: 26rpx; color: #e95410; line-height: 50rpx; text-indent: 50rpx;
background: url('https://bzm.oss-cn-beijing.aliyuncs.com/baizhuanmao/5s-4.png') 14rpx center no-repeat;
background-size:28rpx; 
}